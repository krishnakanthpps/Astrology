<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f75820"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/sriastrologo" />

        <TextView
            android:id="@+id/thankyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Thank you for registering with us."
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/successmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thankyou"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:padding="25dp"
            android:text="We are working on your horoscope and will send you a notification once it is ready.Based on your date of birth,find generic details about yourself while we are personalizing your horoscope analysis."
            android:textColor="@color/white"
            android:textSize="16sp" />


       <!-- <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/successmessage"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:src="@drawable/info_android" />-->

    </RelativeLayout>


</LinearLayout>